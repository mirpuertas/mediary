<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="6dp"
    android:paddingEnd="6dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:background="@drawable/water_widget_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/water_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/water_widget_label"
            android:textStyle="bold"
            android:textSize="11sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/mediary_widget_on_surface" />

        <TextView
            android:id="@+id/water_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/mediary_widget_on_surface" />

        <TextView
            android:id="@+id/water_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/10"
            android:textSize="10sp"
            android:textColor="@color/mediary_widget_muted"
            android:layout_marginStart="2dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/water_dec"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/water_widget_button_bg"
            android:text="-"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/mediary_on_primary"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="6dp"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/water_inc"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/water_widget_button_bg"
            android:text="+"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/mediary_on_primary"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>
</LinearLayout>

